.footer
  .mailFooter
    table(style='width:100%;', cellspacing=0, cellpadding=0)
      tbody
        tr
          td(width='100%', colspan='2', style='height:28px')
            p
        tr
          td(width='100%', colspan='2', style='height:12px;border-top: 1px solid #ddd;')
        if reason
          tr
            td(width='100%', colspan='2')
              p
                small
                  != reason
        if unsubscribeText && unsubscribeLink
          tr
            td(width='100%', colspan='2')
              p
                small: a(href=unsubscribeLink)= unsubscribeText

        if correlationId || view
          tr
            td(width='100%', colspan='2')
              p
                small
                  if version
                    | Repos #{version}
                    br
                  if correlationId
                    | Correlation ID: #{correlationId}
                  if correlationId && view
                    br
                  if view
                    | Template: #{view}
        tr
          td
            p.footer
              | #{companyName} NIH GitHub
              br
              a(href='https://github.nih.gov') github.nih.gov
              | &nbsp;&bull;&nbsp;
              a(href='mailto:GitHub@nih.gov') GitHub@nih.gov

          td(width='120', valign='middle')
            img(align='right', valign='middle', src='https://github.nih.gov/assets/img/nih_long.png', width='108', height='17', alt='National Institutes of Health')

