{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // there are issues with @types/express right now
    "target": "es2022",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "lib": ["es2022"],
    "types": ["jest"]
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "./.ossdev/**/*"],
  "include": [
    "./*.ts",
    "./api/**/*",
    "./bin/**/*",
    "./business/**/*",
    "./config/**/*",
    "./data/**/*",
    "./entities/**/*",
    "./features/**/*",
    "./github/**/*",
    "./interfaces/**/*",
    "./jobs/**/*",
    "./lib/**/*",
    "./microsoft/**/*",
    "./middleware/**/*",
    "./routes/**/*",
    "./scripts/**/*",
    "./test/**/*",
    "./user/**/*",
    "./webhooks/**/*"
  ]
}
